<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenTheme" parent="@style/AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="Theme.Start" parent="android:Theme">
        <item name="android:windowBackground">@drawable/bg_launcher</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextInputLayout_Style" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">#8c8c8c</item>
        <item name="android:textSize">@dimen/edittext_textsize</item>
        <!-- 下面可以根据需要设置，如果没有将默认使用默认theme的颜色 -->
        <!-- Label标签的颜色 -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <!-- 选择的底线颜色 -->
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout_Error_Msg_Style" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="AboutCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10</item>
        <item name="android:layout_marginRight">@dimen/dimen_10</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AboutTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/dimen_10</item>
        <item name="android:textColor">@color/about_text_color</item>
    </style>
    <style name="btn_common">
        <item name="android:layout_height">@dimen/dimen_40</item>
        <item name="android:background">@drawable/common_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>

    </style>
    <style name="text_gray16">
        <item name="android:textColor">@color/gray_text_shen</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="text_black16">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>
    <style name="text_gray14">
        <item name="android:textColor">@color/gray_text_shen</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <style name="text_gray12">
        <item name="android:textColor">@color/gray_text_shen</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>
    <style name="text_black14">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <style name="line_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/line</item>
    </style>
    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_buttom_out</item>
    </style>



</resources>

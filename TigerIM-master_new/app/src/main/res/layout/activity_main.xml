<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/content_main"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context=".activity.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorTheme"
        >
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:text="@string/text_message"
            />
        <ImageView
            android:id="@+id/add_iv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_add"
            android:padding="18dp"
            android:onClick="addClick"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <cn.ittiger.im.ui.PreViewPager
        android:id="@+id/main_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </cn.ittiger.im.ui.PreViewPager>

    <include
        android:id="@+id/divider"
        layout="@layout/divider_horizontal_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/first_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:clickable="true"
            android:onClick="chooseView"
            >
            <ImageView
                android:id="@+id/first_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tabbar_message"
                />
            <TextView
                android:id="@+id/first_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="@string/text_message"
                android:textSize="13dp"
                android:textColor="@drawable/main_item_text_selector"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:clickable="true"
            android:onClick="chooseView"
            >
            <ImageView
                android:id="@+id/second_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tabbar_contact"
                />
            <TextView
                android:id="@+id/second_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:paddingTop="2dp"
                android:gravity="center"
                android:text="@string/text_contact"
                android:textSize="13dp"
                android:textColor="@drawable/main_item_text_selector"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:clickable="true"
            android:onClick="chooseView"
            >
            <ImageView
                android:id="@+id/third_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tabbar_my"
                />
            <TextView
                android:id="@+id/third_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:paddingTop="2dp"
                android:gravity="center"
                android:text="@string/text_my"
                android:textSize="13dp"
                android:textColor="@drawable/main_item_text_selector"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
